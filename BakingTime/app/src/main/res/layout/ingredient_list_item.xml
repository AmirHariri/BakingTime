<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_padding_small"
    android:paddingStart="@dimen/layout_margin_small"
    android:paddingEnd="@dimen/layout_margin_small"
    android:paddingTop="@dimen/layout_padding_small">

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_small"
        android:layout_marginStart="@dimen/text_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="5.0" />

    <TextView
        android:id="@+id/tv_mesaure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_small"
        android:layout_marginStart="@dimen/text_margin_small"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Cup" />

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Salt" />
</LinearLayout>